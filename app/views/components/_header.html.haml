%header
  .language-selection
    = link_to 'english', url_for(locale: :en), class: "language-choice"
    = link_to 'العربية', url_for(locale: :ar), class: "language-choice",
       lang: "ar"

  = link_to(root_path, class: "logo") do
    = image_tag("logo.png")
  %nav{ role: "navigation" }
    %ul
      %li
        = link_to("#", class: "nav-link") do
          %span.icon.icon-search
          = t('main_nav.browse')
      %li
        - if user_signed_in?
          = link_to(dashboard_path, class: "nav-link user-link") do
            %span.icon.icon-home
            = t('main_nav.dashboard')
        - else
          = link_to(new_user_registration_path,
            class: "nav-link user-link") do
            = t('main_nav.signup')
      %li
        - if user_signed_in?
          = link_to(destroy_user_session_path, class: "nav-link user-link") do
            %span.icon.icon-off
            = t('main_nav.logout')
        - else
          = link_to(user_session_path, class: "nav-link user-link") do
            = t('main_nav.login')
