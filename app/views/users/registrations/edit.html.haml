%h2= t("devise.registrations.edit_page_header")
= form_for(resource, as: resource_name, url: registration_path(resource_name),
html: { method: :put }) do |f|
  = devise_error_messages!
  .field
    = f.label :email, t("devise.active_record.attributes.user.email")
    %br/
    = f.email_field :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :password, t("devise.registrations.edit_password_label")
    %i= t("devise.registrations.edit_password_field_info")
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, t("devise.registrations.password_confirmation")
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :current_password, t("devise.registrations.edit_password_confirmation_label")
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, autocomplete: "off"
  .actions
    = f.submit t("devise.registrations.submit_edit")
%h3 Cancel my account
%p Unhappy? puts button_to "Cancel my account",
registration_path(resource_name),
data: { confirm: "Are you sure?" },
method: :delete
= link_to "Back", :back
