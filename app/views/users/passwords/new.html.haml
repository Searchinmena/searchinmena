.container
  .form-container
    .form-header
      %h1.form-title= t("devise.passwords.new_page_header")

    = form_for(resource, as: resource_name,
    url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .field
        = f.label :email, t("devise.active_record.attributes.user.email")
        = f.email_field :email, autofocus: true
      .actions
        = f.submit t("devise.passwords.submit")
    .form-links
      %p.text= t("devise.links.signup_text")
      = link_to t("devise.links.signup"), new_registration_path(resource_name),
        class: "form-link"
