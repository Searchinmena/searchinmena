.container
  .log-in-wrapper
    .form-wrapper
      .form-header
        %h1.form-title= t("devise.sessions.new_page_header")
        %h3
          = t("devise.links.signup_text")
          = link_to t("devise.links.signup"), 
            new_registration_path(resource_name)
      = form_for(resource, as: resource_name,
      url: session_path(resource_name)) do |f|
        .field
          = f.label :email, t("devise.active_record.attributes.user.email")
          = f.email_field :email, autofocus: true
        .field
          = f.label :password, t("devise.sessions.password")
          = f.password_field :password, autocomplete: "off"
        - if devise_mapping.rememberable?
          .field.checkbox
            = f.check_box :remember_me
            = f.label :remember_me, t("devise.sessions.remember_me")
        .actions
          = f.submit t("devise.sessions.submit")
      .form-links
        = link_to t("devise.links.forgot_password"), 
          new_password_path(resource_name), class: "form-link"

    .form-additional-panel
      %h1.title.centered Great to see you again!
