%label {{ "attributes.title" | translate }}

%ul
  %li.field-item{ "ng-repeat": "(index, attribute) in attributes" }
    .inline-field
      %span {{ "attributes.attribute" | translate }}
      %input{ type: "text",
        placeholder: '{{ "attributes.attribute_placeholder" | translate }}',
        "ng-model": "attribute.name" }
    .inline-field
      %span {{ "attributes.value" | translate }}
      %input.with-remove-button{ type: "text",
        placeholder: '{{ "attributes.value_placeholder" | translate }}',
        "ng-model": "attribute.value" }
    %button.remove-button.remove-attribute{ type: "button", "ng-click": "removeAttribute(attribute)" }
      %span.icon-remove

    .error{ "ng-repeat": "(i, error) in errors.attributes[index]" }
      %error-message-for{ "error": "error" }

%button.plus-button{ type: "button", "ng-click": "addAttribute()", id: "add-attribute" }
  %span.icon-plus
  {{ "attributes.add_more" | translate }}
