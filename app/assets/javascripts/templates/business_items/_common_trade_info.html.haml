.field
  %label {{ "business_item.payment_terms" | translate }}
  .checkbox-field{ "ng-repeat": "term in payment_terms track by term.id" }
    %input{ type: "checkbox", val: "{{term.id}}",
    "ng-model": "businessItem.payment_terms[term.id]",
    "ng-checked": "{{businessItem.payment_terms[term.id]}}",
    id: 'payment_term-{{term.id}}' }
      %label.inline-label{ for: 'payment_term-{{term.id}}' } {{ term.label }}

