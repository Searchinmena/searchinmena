.field.compound-field
  %label {{ "trade_info.fob_price" | translate }}
  %p.field-comment {{ "trade_info.fob_price_comment" | translate }}
  %form-field{ "error": "errors.business_item.fob_price", class: 'inline-field' }
    %input{ type: "text", "ng-model": "businessItem.fob_price" }
  .inline-field
    .select-field
      %select{ "ng-options": "currency.id as currency.label for currency in currencies",
      "ng-model": "businessItem.fob_price_currency_id" }
        %option{ value: "" } -- {{ "trade_info.choose_currency" | translate }} --
    %error-message-for{ "error": "errors.business_item.fob_price_currency_id" }
  .inline-field.field-with-label
    %span {{ "trade_info.per" | translate }}
    .select-field
      %select{ "ng-options": "unit.id as unit.label for unit in units",
      "ng-model": "businessItem.fob_price_unit_id" }
        %option{ value: "" } -- {{ "trade_info.choose_unit" | translate }} --
    %error-message-for{ "error": "errors.business_item.fob_price_unit_id" }

%form-field{ "error": "errors.business_item.port" }
