.item-summary{ tabindex: "0",
  "dir-paginate": "businessItem in businessItems | itemsPerPage: 10",
  "total-items": "total", "current-page": "pagination.current" }
  .item-img-holder
    %img.item-img{ "ng-src": "{{businessItem.thumbUrl}}" }

  .item-info
    %h3.item-title {{businessItem.name}}
    .breadcrumbs
      in
      %span.breadcrumbs-item{ "ng-repeat": "item in businessItem.breadcrumbsWithoutLast()" }
        {{item.name}}
        %span.icon-chevron-right
      %span.breadcrumbs-item
        {{businessItem.lastBreadcrumb().name}}

  .item-options
    %a.edit{ href: "#"}
      %span.icon.icon-pencil
      edit
    %a.see-page{ href: "#"}
      %span.icon.icon-eye-open
      see
    %a.delete{ href: "#"}
      %span.icon.icon-remove
      remove

.pagination-container
  %dir-pagination-controls{ "on-page-change": "pageChanged(newPageNumber)" }
