.field.compound-field
  %label {{ "trade_info.fob_price" | translate }}
  %p.field-comment {{ "trade_info.fob_price_comment" | translate }}
  %form-field{ "error": "errors.business_item.fob_price", class: 'inline-field' }
    %input{ type: "number", step: "any", min: "0", "ng-model": "form.business_item.fob_price" }
  .select-field
    %select{ "ng-options": "currency.id as currency.label for currency in currencies",
    "ng-model": "form.business_item.fob_price_currency_id" }
      %option{ value: "" } -- {{ "trade_info.choose_currency" | translate }} --
  %span {{ "trade_info.per" | translate }}
  .select-field
    %select{ "ng-options": "unit.id as unit.label for unit in units",
    "ng-model": "form.business_item.fob_price_unit_id" }
      %option{ value: "" } -- {{ "trade_info.choose_unit" | translate }} --

%form-field{ "error": "errors.business_item.port" }
  %label {{ "trade_info.port" | translate }}
  %input{ type: "text", "ng-model": "form.business_item.port" }

.field.compound-field
  %label {{ "trade_info.supply" | translate }}
  %p.field-comment {{ "trade_info.supply_comment" | translate }}
  %form-field{ "error": "errors.business_item.supply_ability_capacity", class: 'inline-field' }
    %input{ type: "number", min: "0", "ng-model": "form.business_item.supply_ability_capacity" }
  .select-field
    %select{ "ng-options": "unit.id as unit.label for unit in units",
    "ng-model": "form.business_item.supply_ability_unit_id" }
      %option{ value: "" } -- {{ "trade_info.choose_unit" | translate }} --
  %span {{ "trade_info.per" | translate }}
  .select-field
    %select{ "ng-options": "frequency.id as frequency.label for frequency in frequencies",
    "ng-model": "form.business_item.supply_ability_frequency_id" }
      %option{ value: "" } -- {{ "trade_info.choose_frequency" | translate }} --

.field
  %label {{ "trade_info.payment_terms" | translate }}
  .checkbox-field{ "ng-repeat": "term in payment_terms track by term.id" }
    %input{ type: "checkbox", val: "{{term.id}}",
    "ng-model": "form.payment_terms[term.id]", id: 'payment_term-{{term.id}}' }
      %label.inline-label{ for: 'payment_term-{{term.id}}' } {{ term.label }}

%form-field{ "error": "errors.business_item.packaging" }
  %label {{ "trade_info.packaging" | translate }}
  %input{ type: "text", "ng-model": "form.business_item.packaging_details" }

