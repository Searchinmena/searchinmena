.modal-body{ "ng-swipe-left": "Lightbox.nextImage()", "ng-swipe-right": "Lightbox.prevImage()" }
  .lightbox-nav
    %button.remove-button{ "aria-hidden": "true", "ng-click": "$dismiss()" }
      %span.icon-remove

  .lightbox-image-container
    %a.btn-nav-img.next-img{ "ng-click": "Lightbox.prevImage()", "ng-show": "{{ Lightbox.images.length > 1 }}" }
      %span.icon-chevron-left
      / {{ "lightbox.prev" | translate }}
    %a.btn-nav-img.prev-img{ "ng-click": "Lightbox.nextImage()", "ng-show": "{{ Lightbox.images.length > 1 }}" }
      / {{ "lightbox.next" | translate }}
      %span.icon-chevron-right
    .lightbox-image-caption
      %span {{ Lightbox.imageCaption }}
    %img{ alt: "", "lightbox-src": "{{ Lightbox.imageUrl }}" }

