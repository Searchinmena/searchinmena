%h2.header-title 
  {{ "products.your_products" | translate }}
%section.products-index
  .products-options
    %button.small-button{ "ui-sref": "new_product" }
      %span.icon-plus
      {{ "products.add_new_product" | translate }}

  .item-summary{ tabindex: "0", "ng-repeat": "product in products" }
    .item-img-holder
      %img.item-img{ "ng-src": "{{product.thumbUrl}}" }
    .item-info
      %h3.item-title {{product.name}}
      .breadcrumbs
        in
        %span.breadcrumbs-item{ "ng-repeat": "item in product.breadcrumbsWithoutLast()" }
          {{item.name}}
          %span.icon-chevron-right
        %span.breadcrumbs-item
          {{product.lastBreadcrumb().name}}

    .item-options
      %a.delete{ href: "#"}
        %span.icon.icon-remove
        remove
      %a.see-page{ href: "#"}
        %span.icon.icon-eye-open
        see
      %a.edit{ href: "#"}
        %span.icon.icon-pencil
        edit
