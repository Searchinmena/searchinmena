%section.product-view
  %div{ "ng-include": "'business_items/_header.html'" }
  .item-short-info
    %button.contact-supplier{ "ng-click": "MessageModal.new(business.id)" }
      %span.icon.icon-envelope
      {{ "contact_seller" | translate }}
    .column{ "ng-show": "businessItem.hasAnyBasicInfoPresent()" }
      %h4.subtitle
        {{ "business_item.basic_info" | translate }}
      %table.item-details
        %tr{ "ng-show": "businessItem.get('model_number')" }
          %td.attribute
            {{ "business_item.model_number" | translate }}:
          %td
            {{ businessItem.get('model_number') }}
        %tr{ "ng-show": "businessItem.get('brand_name')" }
          %td.attribute
            {{ "business_item.brand_name" | translate }}:
          %td
            {{ businessItem.get('brand_name') }}
        %tr{ "ng-show": "businessItem.get('min_order_quantity_number')" }
          %td.attribute
            {{ "business_item.min_order_quantity_number" | translate }}:
          %td
            {{ businessItem.get('min_order_quantity_number') }}
            {{ businessItem.get('min_order_quantity_unit') }}

        %tr{ "ng-show": "businessItem.get('fob_price')" }
          %td.attribute
            {{ "business_item.fob_price" | translate }}:
          %td
            {{ businessItem.get('fob_price') }}
            {{ businessItem.get('fob_price_currency') }}
            \/
            {{ businessItem.get('fob_price_unit') }}
        %tr{ "ng-show": "businessItem.get('supply_ability_capacity')" }
          %td.attribute
            {{ "business_item.supply_ability_capacity" | translate }}:
          %td
            {{ businessItem.get('supply_ability_capacity') }}
            {{ businessItem.get('supply_ability_unit') }}
            \/
            {{ businessItem.get('supply_ability_frequency') }}
        %tr{ "ng-show": "businessItem.hasPaymentTerms()" }
          %td.attribute
            {{ "business_item.payment_terms" | translate }}:
          %td
            %span.payment-term{ "ng-repeat": "paymentTerm in businessItem.paymentTerms()" }
              {{ paymentTerm }}
        %tr{ "ng-show": "businessItem.get('packaging_details')" }
          %td.attribute
            {{ "business_item.packaging_details" | translate }}:
          %td {{ businessItem.get('packaging_details') }}

    %div{ "ng-include": "'business_item/_attributes.html'" }

    .column.description-column
      %div{ "ng-include": "'business_item/_description.html'" }
  %span.company-products.similar-items 
    %ul
      %span.mar-left-20
        = "Related Products"
      %li{ "ng-repeat": "product in similar_items"}
        %a.item-img-link{ href: '{{ showpath }}/{{product.id}}' }
          %img{ src: "{{ product.photo.photo.thumb.url }}" }
        .product-item-title
          %a{ href: '{{ showpath }}/{{product.id}}' }
            {{ product.name }}

