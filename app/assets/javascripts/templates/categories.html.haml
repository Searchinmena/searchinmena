%div
  .remove-button
    %span.icon-remove{ "ng-click": "cancel()" }
  %h2.modal-header
    %span.icon-circle-arrow-left{ "ng-click": "previous()" }
    {{title}}
    %span.icon-chevron-right
  .categories-container
    // if you choose category, subcategories should appear. It can be done with display none/block. in perfect world I would add some classes to those lists and position them left: -840px / left: 0 etc, then i can animate it like it's sliding
    %ul.choose-category-list
      %li.category-name{ "ng-repeat": "category in categories" }
        %a{ "ng-click": "next(category)" }
          {{category.name}}

  .modal-action
    %input{ type: "submit", value: "OK", "ng-click": "ok()" }
