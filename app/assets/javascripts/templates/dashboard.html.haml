%section.dashboard-content
  %h1.title.greeting 
    {{ "dashboard.greeting" | translate }}

  %h2.header-title Company Profile Summary
  .company-profile-summary
    %h3 Your Company

    %button.small-button
      %span.icon-pencil
      edit company info
%section.dashboard-content
  %h2.header-title 
    Your Products
    %a.header-link{ href: "#"}
      %span.icon.icon-eye-open
      See all
  .index-options
    %button.small-button{ "ui-sref": "new_product" }
      %span.icon-plus
      {{ "products.add_new_product" | translate }}

  .item-summary
    .item-img-holder
      = image_tag("vase-1.jpeg", class: "item-img")
    .item-info
      %h3.item-title Item Name
      .breadcrumbs
        %span in
        %span.breadcrumbs_item Agliculture
        %span.icon-chevron-right
        %span.breadcrumbs_item Kapusta
    .item-options
      %a.edit{ href: "#" }
        %span.icon.icon-pencil
        {{ "business_items.edit" | translate }}
      %a.see-page{ "ui-sref": "{{ showUrl(businessItem) }}" }
        %span.icon.icon-eye-open
        {{ "business_items.see" | translate }}
      %a.delete{ "ng-click-with-confirm": "deleteClicked(businessItem)" }
        %span.icon.icon-remove
        {{ "business_items.remove" | translate }}
