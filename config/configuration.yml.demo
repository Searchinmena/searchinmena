defaults:
  email_from: 'no-reply@searchinmena.com'
development:
  app_host: 'localhost:3000'
production:
  app_host: http://sim.demo.llp.pl
  honeybadger_env: demo
  validations:
    email_format: !ruby/regexp '/\A([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})\z/'
    password_min_length: 8
    password_max_length: 72
    max_text_area_size: 2000
    max_text_field_size: 255
