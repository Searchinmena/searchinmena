defaults: &defaults
  email_from: 'confirmation@searchinmena.com'
  app_url: http://localhost:3000
  app_host: localhost
  validations:
    email_format: !ruby/regexp '/\A([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})\z/'
    password_min_length: 8
    password_max_length: 72
    max_text_area_size: 2000
    max_text_field_size: 255
  angular_flash_timeout: 5000

development:
  honeybadger_env: development
  <<: *defaults

test:
  honeybadger_env: test
  <<: *defaults
